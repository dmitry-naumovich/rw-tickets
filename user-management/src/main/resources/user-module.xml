<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>jdbc.properties</value>
			</list>
		</property>
	</bean>
	
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="url">
			<value>${database.url}</value>
		</property>
		<property name="driverClassName">
			<value>${database.driverClassName}</value>
		</property>
		<property name="username">
			<value>${database.username}</value>
		</property>
		<property name="password">
			<value>${database.password}</value>
		</property>
	</bean>
	
	<bean id="userDao" class="by.epam.naumovich.rw_tickets.dao.impl.UserDAOImpl">
		<constructor-arg>
			<ref bean="dataSource"/>
		</constructor-arg>
	</bean>
	<bean id="userGroupDao" class="by.epam.naumovich.rw_tickets.dao.impl.UserGroupDAOImpl">
		<constructor-arg>
			<ref bean="dataSource"/>
		</constructor-arg>
	</bean>
	<bean id="groupRequestDao" class="by.epam.naumovich.rw_tickets.dao.impl.GroupRequestDAOImpl">
		<constructor-arg>
			<ref bean="dataSource"/>
		</constructor-arg>
	</bean>
	
	<bean id="userService" class="by.epam.naumovich.rw_tickets.service.impl.UserServiceImpl">
		<property name="userDAO"><ref bean="userDAO"/></property>
	</bean>
	<bean id="userGroupService" class="by.epam.naumovich.rw_tickets.service.impl.UserGroupServiceImpl">
		<property name="userGroupDAO"><ref bean="userGroupDao"/></property>
	</bean>
	<bean id="groupRequestService" class="by.epam.naumovich.rw_tickets.service.impl.GroupRequestServiceImpl">
		<property name="groupRequestDAO"><ref bean="groupRequestDao"/></property>
	</bean>
	
	<bean id="serviceFacade" class="by.epam.naumovich.rw_tickets.service.ServiceFacade">
		<property name="userService"><ref bean="userService"/></property>
		<property name="userGroupService"><ref bean="userGroupService"/></property>
		<property name="groupRequestService"><ref bean="groupRequestService"/></property>
	</bean>
	
</beans>