<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>unitils.properties</value>
			</list>
		</property>
	</bean>
	
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="url">
			<value>${database.url}</value>
		</property>
		<property name="driverClassName">
			<value>${database.driverClassName}</value>
		</property>
		<property name="username">
			<value>${database.userName}</value>
		</property>
		<property name="password">
			<value>${database.password}</value>
		</property>
	</bean>
	
	<bean id="userDao" class="by.epam.naumovich.rw_tickets.dao.impl.UserDAOImpl">
		<constructor-arg>
			<ref bean="dataSource"/>
		</constructor-arg>
	</bean>
	<bean id="userGroupDao" class="by.epam.naumovich.rw_tickets.dao.impl.UserGroupDAOImpl">
		<constructor-arg>
			<ref bean="dataSource"/>
		</constructor-arg>
	</bean>
	<bean id="groupRequestDao" class="by.epam.naumovich.rw_tickets.dao.impl.GroupRequestDAOImpl">
		<constructor-arg>
			<ref bean="dataSource"/>
		</constructor-arg>
	</bean>
	
	<bean id="userServiceTarget" class="by.epam.naumovich.rw_tickets.service.impl.UserServiceImpl">
		<property name="userDAO"><ref bean="userDao"/></property>
		<property name="groupDAO"><ref bean="userGroupDao"/></property>
	</bean>
	<bean id="userGroupServiceTarget" class="by.epam.naumovich.rw_tickets.service.impl.UserGroupServiceImpl">
		<property name="groupDAO"><ref bean="userGroupDao"/></property>
	</bean>
	<bean id="groupRequestServiceTarget" class="by.epam.naumovich.rw_tickets.service.impl.GroupRequestServiceImpl">
		<property name="requestDAO"><ref bean="groupRequestDao"/></property>
	</bean>
</beans>